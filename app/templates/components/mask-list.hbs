<section class="link-placeholder">
	<h2>Link</h2>
	<div class="link-mask-container">
		<div class="mask-active-container">
			<!-- if a mask has been clicked and thus has an url, place this url in the img src -->
			{{#if source }}
			<img src={{ source }} alt="">
			{{/if}}
		</div>
		<div class="link-container">
			<img class="link" src="assets/images/link-model.png" alt="">
		</div>
	</div>
</section>
<section class="mask-list-container">
	<h2>Maskers</h2>
	<div class="mask-list">
		<!-- Loop that generates all the mask-items and links to specific detail page of the mask and add the click function on the button element to get the picture property and place it on link's face -->
		{{#each @masks as |mask|}}
			<div class="">
				<button class="mask-item" onclick={{action "callChildFunction" mask}}>
					<div class="mask-img">
						<img src={{mask.picture}} alt={{mask.title}}>
					</div>
					<div class="mask-content">
						<h3>{{mask.title}}</h3>
					</div>
				</button>
				<p>
					{{#link-to "masks.detail" mask class=mask.id}}Lees meer...{{/link-to}}
				</p>
			</div>
		{{/each}}
	</div>
</section>
